<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module06MVVM.View.EmployeeView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ID"/>
            <!--<Entry x:Name="employeeID" Placeholder="Enter ID No. "/>-->
            <Label Text="Name"/>
            <Entry x:Name="txtName" Placeholder="Enter Employee Name"/>
            <Label Text="Email"/>
            <Entry x:Name="txtEmail" Placeholder="Enter Employee Email"/>
            <Label Text="Address"/>
            <Entry x:Name="txtAddress" Placeholder="Enter Employee Address"/>
            <Button Text="Save Record" Clicked="btnSaveUpdate_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>